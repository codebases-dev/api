{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"checkJs": false,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": ["es2021"],
		"module": "es2022",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2021",
		"types": ["@cloudflare/workers-types"]
	}
}
